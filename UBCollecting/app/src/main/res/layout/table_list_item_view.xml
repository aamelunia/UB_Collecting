<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border">
    
    <TextView
        android:id="@+id/table_item_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/table_item_insert_button"
        android:textStyle="bold"
        android:textSize="12pt"
        android:padding="4dp" />

    <Button
        android:id="@+id/table_item_insert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/insert_button" />

    <Button
        android:id="@+id/table_item_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/table_item_insert_button"
        android:text="@string/view_button" />

    <Button
        android:id="@+id/table_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/table_item_view_button"
        android:text="@string/delete_button" />

</RelativeLayout>